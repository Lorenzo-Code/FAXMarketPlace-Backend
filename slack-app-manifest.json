{
  "display_information": {
    "name": "FractionaX Admin Bot",
    "description": "Comprehensive admin bot for FractionaX platform management",
    "background_color": "#1f2937"
  },
  "features": {
    "bot_user": {
      "display_name": "FractionaX Admin",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/admin-help",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "Show all available admin commands and examples",
        "should_escape": false
      },
      {
        "command": "/ping",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "Test bot connectivity and response time",
        "should_escape": false
      },
      {
        "command": "/test",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "Test bot functionality",
        "should_escape": false
      },
      {
        "command": "/health",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "Check server health and status",
        "should_escape": false
      },
      {
        "command": "/system",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "System management operations",
        "usage_hint": "status|health|sync|cache",
        "should_escape": false
      },
      {
        "command": "/system-status",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "Detailed system status with database info",
        "should_escape": false
      },
      {
        "command": "/user",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "User management operations",
        "usage_hint": "info|search|suspend|unlock [email]",
        "should_escape": false
      },
      {
        "command": "/security",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "Security operations and controls",
        "usage_hint": "reset-password|lock|unlock [email]",
        "should_escape": false
      },
      {
        "command": "/wallet",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "Wallet management operations",
        "usage_hint": "info|freeze|activity [email]",
        "should_escape": false
      },
      {
        "command": "/kyc",
        "url": "https://api.fractionax.io/slack/commands",
        "description": "KYC management operations",
        "usage_hint": "status|approve|reject [email]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "users:read"
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
