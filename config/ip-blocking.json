{
  "autoBlockThreshold": 85,
  "reviewThreshold": 70,
  "maxRequestsPerMinute": 60,
  "maxFailedAttemptsPerHour": 10,
  "maxConnectionsPerIP": 5,
  "blockedCountries": ["CN", "RU", "KP", "IR", "SY"],
  "allowedCountries": [],
